var number = 5;
function addTwo (){ //print numbers plus 2 | addTwo();
    console.log ("Running addTwo");
    const additionBy = 2;

    if (number < 10) { // this is inside de block, the global cannot read, but i can read the global value | is the true version of the function
        let sum = number + additionBy;
        console.log(sum);
        console.log ("Global number:", number)
    }
    else { // this is the false version
        let sum = number;
        console.log (sum);
        console.log ("Global Numbers:", number);
    }
}

